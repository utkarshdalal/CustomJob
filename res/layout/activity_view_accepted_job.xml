<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ViewAcceptedJobFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewSize,HardcodedText,ObsoleteLayoutParam,NestedScrolling" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_texture" >
        
        <TextView
        	android:id="@+id/buyer_view_accepted_job_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:text="View Accepted Job"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="30sp" />

        <ScrollView
            android:id="@+id/ViewAcceptedJobScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/buyer_view_accepted_job_title"
            android:background="#fff"
            android:layout_margin="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/ViewAcceptedJobTitleBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" >

                    <TextView
                        android:id="@+id/ViewAcceptedJobTextViewItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Title: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ViewAcceptedJobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@id/ViewAcceptedJobTextViewItemTitle"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/ViewAcceptedJobTextViewItemTitle"
                        android:layout_marginTop="7dp"
                        android:background="@android:color/transparent"
                        android:textColor="#AAA"
                        android:ems="10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ViewAcceptedJobDescriptionBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ViewAcceptedJobTitleBackground"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/ViewAcceptedJobDescriptionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Description: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ViewAcceptedJobDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ViewAcceptedJobDescriptionTitle"
                        android:layout_below="@+id/ViewAcceptedJobDescriptionTitle"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="7dp"
                        android:layout_row="0"
                        android:background="@android:color/transparent"
                        android:textColor="#AAA"
                        android:ems="10" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/ViewAcceptedJobWinningBidBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ViewAcceptedJobDescriptionBackground"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/ViewAcceptedJobWinningBidTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Winning Bid: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ViewAcceptedJobWinningBid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ViewAcceptedJobWinningBidTitle"
                        android:layout_below="@+id/ViewAcceptedJobWinningBidTitle"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="7dp"
                        android:layout_row="0"
                        android:background="@android:color/transparent"
                        android:textColor="#AAA"
                        android:ems="10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ViewAcceptedJobWinningBidderRelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/ViewAcceptedJobWinningBidBackground"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/ViewAcceptedJobWinningBidderTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Winning Bidder:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ViewAcceptedJobWinningBidder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/ViewAcceptedJobWinningBidderTitle"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ViewAcceptedJobWinningBidderTitle"
                        android:layout_marginTop="7dp"
                        android:textColor="#AAA" />


                </RelativeLayout>
                
                <LinearLayout
                    android:id="@+id/ViewAcceptedJobAttachmentsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/ViewAcceptedJobWinningBidderRelativeLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ViewAcceptedJobAttachmentsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Attachments: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/ViewAcceptedJobAttachmentsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#efefef"
                        android:orientation="vertical"
                        android:paddingBottom="10dp" >
                    </LinearLayout>
                </LinearLayout>
                
                <RelativeLayout
                    android:id="@+id/ViewAcceptedJobContactSellerRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ViewAcceptedJobAttachmentsLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <Button
                        android:id="@+id/ViewAcceptedJobContactSellerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Contact Artisan" />
                    
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>

<!-- Background from http://www.photos-public-domain.com/2011/04/05/light-blue-canvas-fabric-texture/ -->
