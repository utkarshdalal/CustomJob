<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sellerViewBidDetailsFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewSize,HardcodedText,ObsoleteLayoutParam,NestedScrolling" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_texture" >
        
        <TextView
        	android:id="@+id/seller_view_bid_details_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:text="View Bid Details"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="30sp" />

        <ScrollView
            android:id="@+id/sellerViewBidDetailsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/seller_view_bid_details_title"
            android:layout_margin="10dp"
            android:background="#fff"
            android:layout_marginBottom="80dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/sellerViewBidDetailsAmountBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" >

                    <TextView
                        android:id="@+id/sellerViewBidDetailsTextViewAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Amount: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sellerViewBidDetailsAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@id/sellerViewBidDetailsTextViewAmount"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/sellerViewBidDetailsTextViewAmount"
                        android:layout_marginTop="7dp"
                        android:background="@android:color/transparent"
                        android:textColor="#AAA"
                        android:ems="10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sellerViewBidDetailsDetailsBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/sellerViewBidDetailsAmountBackground"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/sellerViewBidDetailsDestailsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Details: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sellerViewBidDetailsDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/sellerViewBidDetailsDestailsTitle"
                        android:layout_below="@+id/sellerViewBidDetailsDestailsTitle"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="7dp"
                        android:layout_row="0"
                        android:background="@android:color/transparent"
                        android:textColor="#AAA"
                        android:ems="10" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/sellerViewBidDetailsUserNameBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/sellerViewBidDetailsDetailsBackground"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/sellerViewBidDetailsUserNameTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="By: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sellerViewBidDetailsUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/sellerViewBidDetailsUserNameTitle"
                        android:layout_below="@+id/sellerViewBidDetailsUserNameTitle"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="7dp"
                        android:layout_row="0"
                        android:background="@android:color/transparent"
                        android:textColor="#AAA"
                        android:ems="10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sellerViewBidDetailsPlacedOnRelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sellerViewBidDetailsUserNameBackground"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/sellerViewBidDetailsPlacedOnTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="Placed On:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sellerViewBidDetailsPlacedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/sellerViewBidDetailsPlacedOnTitle"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/sellerViewBidDetailsPlacedOnTitle"
                        android:layout_marginTop="7dp"
                        android:textColor="#AAA" />


                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/sellerViewBidDetailsOnRelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sellerViewBidDetailsPlacedOnRelativeLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="1" >

                    <TextView
                        android:id="@+id/sellerViewBidDetailsOnTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:text="On:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/sellerViewBidDetailsOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/sellerViewBidDetailsOnTitle"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/sellerViewBidDetailsOnTitle"
                        android:layout_marginTop="7dp"
                        android:textColor="#AAA" />


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>

<!-- Background from http://www.photos-public-domain.com/2011/04/05/light-blue-canvas-fabric-texture/ -->
